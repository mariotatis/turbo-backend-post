<title bridge_title="Profile">Edit Profile</title>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put}) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="mx-auto mb-0 space-y-4 rounded-lg p-4 shadow-[rgba(7,_65,_210,_0.1)_0px_9px_30px] sm:p-6 lg:p-8">
    <h3 class="font-semibold">Edit Personal Information</h3>
      <div class="field">
        <%= f.label :name, class: 'block text-sm' %>
        <%= f.text_field :name, autocomplete: "first name", class: 'w-full rounded-lg border-gray-200 p-4 text-sm shadow-sm capitalize', required: true %>
      </div>

      <div class="field mt-4">
        <%= f.label :email, class: 'block text-sm' %>
        <%= f.email_field :email, autocomplete: "email", class: 'w-full rounded-lg border-gray-200 p-4 text-sm shadow-sm', required: true %>
      </div>
  </div>

  <div class="mx-auto mb-0 mt-6 space-y-4 rounded-lg p-4 shadow-[rgba(7,_65,_210,_0.1)_0px_9px_30px] sm:p-6 lg:p-8">
    <div class="field">
      <p class="text-sm mb-5">
      To edit your profile, please enter your current password. This ensures the security of your account information.   </p>
      <%= f.label :current_password, class: 'block text-sm' %>
      <%= f.password_field :current_password, autocomplete: "current-password", class: 'w-full rounded-lg border-gray-200 p-4 text-sm shadow-sm' %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Edit Profile", class: "cursor-pointer mt-6 block w-full rounded-lg bg-sky-500 px-5 py-3 text-sm font-medium text-white" %>
  </div>
<% end %>