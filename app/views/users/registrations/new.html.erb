  <div class="mx-auto max-w-lg">
    <h1 class="text-center text-2xl font-bold text-indigo-600 sm:text-3xl">
      Sign up
    </h1>

    <p class="mx-auto mt-4 max-w-md text-center text-gray-500">
      Start your journey today. Join us for endless possibilities and connections.
    </p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'mb-0 mt-6 space-y-4 rounded-lg p-4 shadow-lg sm:p-6 lg:p-8' }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :name, class: 'block text-sm font-medium text-gray-700' %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'w-full rounded-lg border-gray-200 p-4 text-sm shadow-sm capitalize', required: true %>
      </div>

      <div>
        <%= f.label :email, class: 'block text-sm font-medium text-gray-700' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full rounded-lg border-gray-200 p-4 text-sm shadow-sm', required: true %>
      </div>

      <div>
        <%= f.label :password, class: 'block text-sm font-medium text-gray-700' %>
        <%= f.password_field :password, autocomplete: "new-password", class: 'w-full rounded-lg border-gray-200 p-4 text-sm shadow-sm', required: true %>
      </div>

      <div>
        <%= f.label :password_confirmation, class: 'block text-sm font-medium text-gray-700' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'w-full rounded-lg border-gray-200 p-4 text-sm shadow-sm', required: true %>
      </div>

      <button type="submit" class="block w-full rounded-lg bg-indigo-600 px-5 py-3 text-sm font-medium text-white">
        Sign up
      </button>
    <% end %>
  </div>