<title bridge_title="Settings">Settings</title>

<div class="mt-4 rounded-lg border border-gray-100 p-3 mb-5 shadow-[rgba(7,_65,_210,_0.1)_0px_9px_30px]">
  <div class="flex max-h-[400px] w-full flex-col">
    
    <a data-turbo-action="replace" class="group flex items-center gap-x-5 rounded-md px-2.5 py-2 text-s text-gray-500" href="/users/edit">
      <div class="flex h-12 w-12 items-center rounded-lg bg-gray-100 text-black">
        <span class="text-sky-500 tag w-full text-center text-xl font-medium text-gray-700">
          <i class="fa-solid fa-user"></i>
        </span>
      </div>
      <div class="flex flex-col items-start justify-between font-light text-gray-600">
        <p class="text-m font-medium">Edit Profile</p>
      </div>
    </a>

    <a class="group flex items-center gap-x-5 rounded-md px-2.5 py-2 text-s text-gray-500" href="/profile/settings/password">
      <div class="flex h-12 w-12 items-center rounded-lg bg-gray-100 text-black">
        <span class="text-sky-500 tag w-full text-center text-xl font-medium text-gray-700">
          <i class="fa-solid fa-lock"></i>
        </span>
      </div>
