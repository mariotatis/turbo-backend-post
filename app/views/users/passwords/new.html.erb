   <div class="mx-auto max-w-lg">
      <h1 class="text-center text-2xl font-bold text-sky-500 sm:text-3xl">
         Forgot your password?
      </h1>
      <p class="mx-auto mt-4 max-w-md text-center">
         Enter your email address below, and we'll send you instructions on how to reset your password.
      </p>  
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'mb-0 mt-6 space-y-4 rounded-lg p-4 border-gray-100 bg-white p-4 shadow-[rgba(7,_65,_210,_0.1)_0px_9px_30px] sm:p-6 lg:p-8', 'data-turbo-action' => 'replace' }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
         <div>
            <div class="relative">
               <%= f.label :email, class: 'block text-sm' %>
               <%= f.email_field :email, autocomplete: "email", class: 'w-full rounded-lg border-gray-200 p-4 pe-12 text-sm shadow-sm', placeholder: 'Enter email', value: 'm@koombea.com'  %>
            </div>
         </div>
         <div>
            <div class="text-center">
               <%= f.submit "Send Instructions", class: 'cursor-pointer block w-full rounded-lg bg-sky-500 px-5 py-3 text-sm font-medium text-white' %>
            </div>
         </div>
      <% end %>
   </div> 