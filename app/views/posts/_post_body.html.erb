<time datetime="2022-10-10" class="block text-xs">
  <%= post.created_at.strftime('%B %d, %Y %I:%M %p') %>
</time>

<h3 class="mt-0.5 text-lg font-bold text-slate-900">
  <%= post.title %>
</h3>

<p class="mt-2 line-clamp-5 text-sm/relaxed">
  <%= post.description %>
</p>

<% unless post.tags.blank? %>
  <div class="mt-4 flex flex-wrap gap-1">
    <% post.tags.split(' | ').each do |tag| %>
      <span class="whitespace-nowrap rounded-full text-sky-900 bg-sky-100 px-2.5 py-0.5 text-sm">
        <%= tag.strip %>
      </span>
    <% end %>
  </div>
<% end %>