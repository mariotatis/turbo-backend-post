<header class="header sticky top-0">
    <nav class="bg-white border-gray-200 px-4 lg:px-6 py-2.5 dark:bg-gray-800">
        <div class="flex flex-wrap justify-between items-center mx-auto max-w-screen-xl">
            <a href="/" class="flex items-center">
                <span class="self-center text-xl font-semibold whitespace-nowrap dark:text-white">Lucas</span>
                <% if user_signed_in? %>
                    <span class="self-center text-xl font-semibold whitespace-nowrap text-green-400"> â€¢</span>
                <% end %>
            </a>
            <div class="flex items-center lg:order-2 text-gray-400">
            <% if user_signed_in? %>
                <a href="<%= profile_path %>" class="text-gray-800 dark:text-white hover:bg-gray-50 focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-4 lg:px-5 py-2 lg:py-2.5 mr-2 dark:hover:bg-gray-700 focus:outline-none dark:focus:ring-gray-800">Profile</a>
                <span class="ml-2 mr-2">|</span> 
                <%= link_to 'Log Out', destroy_user_session_path, method: :delete, data: { turbo_action: "replace" }, class: 'text-gray-800 dark:text-white hover:bg-gray-50 focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-4 lg:px-5 py-2 lg:py-2.5 mr-2 dark:hover:bg-gray-700 focus:outline-none dark:focus:ring-gray-800'%>
            <% else %>                
                <a href="<%= new_user_session_path %>" class="text-gray-800 dark:text-white hover:bg-gray-50 focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-4 lg:px-5 py-2 lg:py-2.5 mr-2 dark:hover:bg-gray-700 focus:outline-none dark:focus:ring-gray-800">Log in</a>
                <a href="<%= new_user_registration_path %>" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-4 lg:px-5 py-2 lg:py-2.5 mr-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">Get started</a>
            <% end %> 
            </div>
            <% if user_signed_in? %>
                <div class="hidden justify-between items-center w-full lg:flex lg:w-auto lg:order-1" id="mobile-menu-2">
                    <ul class="flex flex-col mt-4 font-medium lg:flex-row lg:space-x-8 lg:mt-0">
                        <li>
                            <a href="<%= posts_path%>" class="<%= request.path == '/' || request.path == '/posts' ? 'text-sky-500' : 'text-white' %> block py-2 pr-4 pl-3 rounded lg:p-0 hover:text-gray-400">All</a>
                        </li>
                        <li>
                            <a href="<%= liked_path%>" class="<%= request.path == '/liked' ? 'text-sky-500' : 'text-white' %> block py-2 pr-4 pl-3 rounded lg:p-0 hover:text-gray-400"><i class="fa-solid fa-heart"></i> Liked</a>
                        </li>
                        <li>
                            <a href="<%= bookmarked_path%>" class="<%= request.path == '/bookmarked' ? 'text-sky-500' : 'text-white' %> block py-2 pr-4 pl-3 rounded lg:p-0 hover:text-gray-400"><i class="fa-solid fa-thumbtack"></i> Bookmarked</a>
                        </li>
                        <li>
                            <a href="<%= new_post_path %>" class="text-white bg-sky-500 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-4 lg:px-5 py-2 lg:py-2.5 mr-2 focus:outline-none">New Post</a>
                        </li>                             
                    </ul>
                </div>
            <% end %>
        </div>
    </nav>
</header>

